{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": ["./src", "./test"],
  "exclude": ["./lib"]
}
